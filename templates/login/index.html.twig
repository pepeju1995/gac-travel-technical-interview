{% extends 'base.html.twig' %}

{% block title %}Acceder - Stockify{% endblock %}

{% block body %}
    <div class="wrapper">
        <section class="login-content">
            <div class="container">
                <div class="row align-items-center justify-content-center height-self-center">
                    <div class="col-lg-8">
                        <div class="card auth-card">
                            <div class="card-body p-0">
                                <div class="d-flex align-items-center auth-content">
                                    <div class="col-lg-7 align-self-center">
                                        <div class="p-3">
                                            <h2 class="mb-2">Acceder</h2>
                                            <form action="{{ path('app_index') }}" method="post">
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="floating-label form-group">
                                                            <input type="text" id="username" name="_username" value="{{ last_username }}"/>
                                                            <label for="username">Usuario</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-12">
                                                        <div class="floating-label form-group">
                                                            <input type="password" id="password" name="_password"/>
                                                            <label for="password">Contrase√±a</label>
                                                        </div>
                                                    </div>   
                                                </div>
                                                <button type="submit" class="btn btn-primary">Acceder</button>
                                                <p class="mt-3">
                                                    Crear una cuenta <a href="{{ path('app_register') }}" class="text-primary">Registrarse</a>
                                                </p>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="col-lg-5 content-right">
                                        <img src="{{ asset('images/login/01.png') }}" class="img-fluid image-right" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
