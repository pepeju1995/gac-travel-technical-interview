{% extends 'base.html.twig' %}

{% block title %}New Products{% endblock %}

{% block body %}
    <div class="content-page">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="d-flex flex-wrap flex-wrap align-items-center justify-content-between mb-4">
                        {% set formErrors = form.vars.errors.form.getErrors(true) %}
                        {% if formErrors|length %}
                            <ul class="list-group mb-3">
                                {% for error in formErrors %}
                                    <li class="list-group-item list-group-item-danger">{{ error.message }}</li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                        <div>
                            <h4 class="mb-3">Nuevo producto</h4>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    {{ include('products/_form.html.twig') }}
                </div> 
            </div>
        </div>
    </div>
    <a href="{{ path('index') }}">back to list</a>
{% endblock %}