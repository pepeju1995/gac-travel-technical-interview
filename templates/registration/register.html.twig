{% extends 'base.html.twig' %}

{% block title %}Registro - Stockify{% endblock %}

{% block body %}    
        <div class="wrapper">
            <section class="login-content">
                <div class="container">
                    <div class="row align-items-center justify-content-center height-self-center">
                        <div class="col-lg-8">
                            <div class="card auth-card">
                                <div class="card-body p-0">
                                    <div class="d-flex align-items-center auth-content">
                                        <div class="col-lg-7 align-self-center">
                                            <div class="p-3">
                                                {% set formErrors = registrationForm.vars.errors.form.getErrors(true) %}
                                                {% if formErrors|length %}
                                                    <ul class="list-group mb-3">
                                                        {% for error in formErrors %}
                                                            <li class="list-group-item list-group-item-danger">{{ error.message }}</li>
                                                        {% endfor %}
                                                    </ul>
                                                {% endif %}

                                                <h2 class="mb-4 text-center">Nuevo registro</h2>
                                                {{ include('registration/_form.html.twig', { 'button_label':'Registrarme' }) }}
                                            </div>
                                        </div>
                                        <div class="col-lg-5 content-right">
                                            <img src="assets/images/login/01.png" class="img-fluid image-right" alt="">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
{% endblock %}
