{% extends 'base.html.twig' %}

{% block title %}Registro - Stockify{% endblock %}

{% block body %}    
        <div class="wrapper">
            <section class="login-content">
                <div class="container">
                    <div class="row align-items-center justify-content-center height-self-center">
                        <div class="col-lg-8">
                            <div class="card auth-card">
                                <div class="card-body p-0">
                                    <div class="d-flex align-items-center auth-content">
                                        <div class="col-lg-8 align-self-center">
                                            <div class="p-3">
                                                <h2 class="mb-4 text-center">Nuevo registro</h2>
                                                {{ form_start(registrationForm) }}
                                                    <div class="row">
                                                        <div class="col-lg-12">
                                                            <div class="floating-label form-group">
                                                                {{ form_widget(registrationForm.username, {'attr': {'class': 'floating-input form-control', 'placeholder': ''}}) }}
                                                                {{ form_label(registrationForm.username, 'Usuario') }}
                                                            </div>
                                                            <div class="floating-label form-group">
                                                                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'floating-input form-control', 'placeholder': ''}}) }}
                                                                {{ form_label(registrationForm.plainPassword, 'Contraseña') }}
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <button type="submit" class="btn btn-primary">Crear cuenta</button>

                                                    <p class="mt-3">
                                                        ¿Ya tienes una cuenta? <a href="{{ path('app_login') }}" class="text-primary">Accede a Stockify</a>
                                                    </p>
                                                {{ form_end(registrationForm) }}
                                            </div>
                                        </div>
                                        <div class="col-lg-5 content-right">
                                            <img src="assets/images/login/01.png" class="img-fluid image-right" alt="">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
{% endblock %}
